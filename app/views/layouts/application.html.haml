!!! 5
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

    %title
      = content_for?(:title) ? yield(:title) : "WalkAwayt"

    %link{ rel: "stylesheet", type: "text/css", href: "http://fonts.googleapis.com/css?family=Lato"}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body{style: "background: url(#{asset_path 'restaurant-bg.jpg'}) no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;"}
    %div{style: "height: 100%; width: 100%; position: fixed; top: 0, left: 0; background-color: rgba(0,0,0,0.40); color: #e7eaed; z-index: -1000;"}
    = render "layouts/navbar"
    = render "shared/notices"
    = yield